          const st = r.start_time;
          iso = r.date + 'T' + (st && st.length === 5 ? (st + ':00') : st);
        }
        const start = Date.parse(iso);
        if (isNaN(start)){
          startMs = null; setActive(false); return;
        }
        if (startMs == null || Math.abs(startMs - start) > 1000){

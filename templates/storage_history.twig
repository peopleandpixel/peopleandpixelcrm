{% extends 'layout.twig' %}
{% block content %}
<section class="space-y-4">
  <div class="flex flex-wrap items-center justify-between gap-3">
    <h2 class="text-2xl font-bold">{{ __('Storage History')|e }}</h2>
    <div>
      <a class="btn" href="{{ url('/storage') }}">{{ __('Back to list')|e }}</a>
    </div>
  </div>

  {% if history is not defined or history is empty %}
    <div class="alert alert-info" role="status">
      <span>{{ __('No history yet.')|e }}</span>
    </div>
  {% else %}
    <div class="overflow-x-auto">
      <table class="table w-full">
        <thead>
          <tr>
            <th>{{ __('Date')|e }}</th>
            <th>{{ __('Item')|e }}</th>
            <th class="text-right">{{ __('Change')|e }}</th>
            <th>{{ __('Note')|e }}</th>
          </tr>
        </thead>
        <tbody>
          {% for h in history %}
            <tr>
              <td>{{ format_datetime(h.created_at|default(''))|e }}</td>
              <td>{{ (h.item_name|default(''))|e }}</td>
              <td class="text-right">{{ (h.delta|default(0))|e }}</td>
              <td>{{ (h.note|default(''))|e }}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  {% endif %}
</section>
{% endblock %}
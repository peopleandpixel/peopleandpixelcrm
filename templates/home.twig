{% extends 'layout.twig' %}
{% block content %}
    {%
    set array = {
        'contacts': {
            'title': __('Contacts'),
            'description': __('Add and manage your contacts with essential details.')
        },
        'times': {
            'title': __('Working Times'),
            'description': __('Track work you have done for contacts, by date and hours.')
        },
        'tasks' : {
            'title': __('Tasks'),
            'description': __('Create and track tasks that can be assigned to contacts.')
        },
        'employees' : {
            'title': __('Employees'),
            'description': __('Maintain your team roster with roles, salary, and hire dates.')
        },
        'candidates' : {
            'title': __('Recruiting'),
            'description': __('Track candidates, positions, and hiring status.')
        },
        'payments' : {
            'title': __('Payments'),
            'description': __('Record income and expenses for simple accounting.')
        },
        'storage' : {
            'title': __('Storage'),
            'description': __('Track inventory items and quantities at locations.')
        },
    }
    %}
<section class="space-y-4">
    <h2 class="text-3xl font-bold">{{ __('Welcome to People & Pixel')|e }}</h2>
    <p class="opacity-80">{{ __('This is a lightweight CRM to manage your company contacts, team, tasks, time tracking, payments, and inventory.')|e }}</p>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
        {% for key, item in array %}
            <div class="card bg-base-200 shadow">
                <div class="card-body">
                    <h3 class="card-title">{{ item.title|e }}</h3>
                    <p>{{ item.description|e }}</p>
                    <div class="card-actions justify-end">
                        <a class="btn btn-sm" href="{{ url('/' ~ key ) }}">{{ __('Open')|e }}</a>
                        <a class="btn btn-sm btn-primary" href="{{ url('/' ~ key ~ '/new') }}">{{ __('New')|e }}</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</section>
{% endblock %}
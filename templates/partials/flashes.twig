{# Flash and error messages partial (DaisyUI) #}
{% if error is defined and error %}
  <div class="alert alert-error" role="alert">
    <span>{{ error|e }}</span>
  </div>
{% endif %}

{% if flashes is defined and flashes %}
  {# flashes is expected as an array like [{type: 'success'|'error'|'info', message: '...'}] #}
  {% for f in flashes %}
    {% set type = f.type|default('info') %}
    {% set cls = type == 'success' ? 'alert-success' : (type == 'error' ? 'alert-error' : 'alert-info') %}
    <div class="alert {{ cls }}" role="status">
      <span>{{ f.message|default('')|e }}</span>
    </div>
  {% endfor %}
{% endif %}

<section class="space-y-4">
  <h2 class="text-2xl font-bold">{{ title|default('')|e }}</h2>
  <form method="post" class="space-y-4"{% if form_action is defined and form_action %} action="{{ form_action }}"{% endif %}>
    {{ csrf_field()|raw }}
    {% if item is defined and item.id %}
      <input type="hidden" name="id" value="{{ (item.id)|int }}">
    {% endif %}

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="form-control">
        <label for="name" class="label"><span class="label-text">{{ __('Name')|e }} *</span></label>
        <input type="text" id="name" name="name" value="{{ name|default(item.name|default(''))|e }}" required class="input input-bordered">
      </div>
      <div class="form-control">
        <label for="qty" class="label"><span class="label-text">{{ __('Quantity')|e }}</span></label>
        <input type="number" id="qty" name="qty" value="{{ qty|default(item.qty|default(0))|e }}" class="input input-bordered">
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="form-control">
        <label for="location" class="label"><span class="label-text">{{ __('Location')|e }}</span></label>
        <input type="text" id="location" name="location" value="{{ location|default(item.location|default(''))|e }}" class="input input-bordered">
      </div>
      <div class="form-control">
        <label for="notes" class="label"><span class="label-text">{{ __('Notes')|e }}</span></label>
        <textarea id="notes" name="notes" rows="3" class="textarea textarea-bordered">{{ notes|default(item.notes|default(''))|e }}</textarea>
      </div>
    </div>

    <div class="flex items-center justify-end gap-2 pt-2">
      <a class="btn btn-ghost" href="{{ url('/storage') }}">{{ __('Cancel')|e }}</a>
      <button class="btn btn-primary" type="submit">{{ submit_label|default(__('Save')|e) }}</button>
    </div>
  </form>
</section>

{% extends 'layout.twig' %}
{% block content %}
<section class="space-y-6 max-w-md">
  <h2 class="text-2xl font-bold">{{ __('Change Password')|e }}</h2>
  {% if error %}
    <div class="alert alert-error">{{ error|e }}</div>
  {% endif %}
  <form method="post" action="{{ url('/password/change') }}" class="space-y-4">
    {{ csrf_field()|raw }}
    <input type="hidden" name="return" value="{{ return|default('/')|e }}">
    <div class="form-control">
      <label class="label"><span class="label-text">{{ __('New Password')|e }}</span></label>
      <input type="password" name="password" class="input input-bordered" required>
      <small class="text-xs opacity-70">{{ __('At least 12 chars, upper/lower/digit/symbol')|e }}</small>
    </div>
    <div class="form-control">
      <label class="label"><span class="label-text">{{ __('Repeat Password')|e }}</span></label>
      <input type="password" name="password2" class="input input-bordered" required>
    </div>
    <div class="flex gap-2">
      <button type="submit" class="btn btn-primary">{{ __('Save')|e }}</button>
      <a class="btn" href="{{ return|default('/')|e }}">{{ __('Cancel')|e }}</a>
    </div>
  </form>
</section>
{% endblock %}

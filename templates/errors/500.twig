<!doctype html>
<html lang="{{ currentLang|default('en')|e }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>500 – Internal Server Error</title>
  <link rel="stylesheet" href="{{ url('/style.css') }}">
</head>
<body>
  <main class="container" style="padding:24px;">
    <h1>500 – {{ __('Internal Server Error')|e }}</h1>
    <p>{{ __('An unexpected error occurred. Please try again later.')|e }}</p>
    {% if errorDetails is defined and errorDetails %}
      <details open>
        <summary>Details (debug)</summary>
        <pre style="white-space:pre-wrap">{{ (errorDetails.class ~ ': ' ~ errorDetails.message ~ '\n' ~ errorDetails.file ~ ':' ~ errorDetails.line ~ '\n' ~ errorDetails.trace)|e }}</pre>
      </details>
    {% endif %}
    <p><a href="{{ url('/') }}">&larr; {{ __('Back to home')|e }}</a></p>
  </main>
</body>
</html>

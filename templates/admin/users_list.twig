{% extends 'layout.twig' %}
{% block content %}
<section class="space-y-4">
  <div class="flex flex-wrap items-center justify-between gap-3">
    <h2 class="text-2xl font-bold">{{ __('Users')|e }}</h2>
    <div class="flex items-center gap-2">
      <a class="btn btn-primary" href="{{ url('/admin/users/new') }}">+ {{ __('Add User')|e }}</a>
    </div>
  </div>

  <div class="overflow-x-auto">
    <table class="table table-zebra w-full">
      <thead>
        <tr>
          <th>{{ __('Login')|e }}</th>
          <th>{{ __('Full name')|e }}</th>
          <th>{{ __('Email')|e }}</th>
          <th>{{ __('Role')|e }}</th>
          <th>{{ __('Actions')|e }}</th>
        </tr>
      </thead>
      <tbody>
        {% for u in users %}
        <tr>
          <td>{{ u.login|e }}</td>
          <td>{{ u.fullname|e }}</td>
          <td>{{ u.email|e }}</td>
          <td>{{ u.role|e }}</td>
          <td class="whitespace-nowrap space-x-2">
            <a class="btn btn-xs" href="{{ url('/admin/users/edit', {id: u.id}) }}">{{ __('Edit')|e }}</a>
            <form method="post" action="{{ url('/admin/users/delete') }}" class="inline" onsubmit="return confirm('{{ __('Are you sure?')|e }}')">
              {{ csrf_field()|raw }}
              <input type="hidden" name="id" value="{{ u.id|e }}">
              <button class="btn btn-xs btn-error" type="submit">{{ __('Delete')|e }}</button>
            </form>
          </td>
        </tr>
        {% else %}
        <tr><td colspan="5">{{ __('No users yet')|e }}</td></tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</section>
{% endblock %}

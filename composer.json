{
  "name": "peopleandpixel/basic-crm",
  "description": "A basic CRM to manage a small business.",
  "type": "project",
  "license": "GPL-3.0-or-later",
  "require": {
    "php": ">=8.4",
    "ext-pdo": "*",
    "vlucas/phpdotenv": "^5.6",
    "monolog/monolog": "^3.6",
    "ext-intl": "*",
    "twig/twig": "^3.10",
    "ext-fileinfo": "*"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "start": "php -S localhost:8080 -t public"
  },
  "config": {
    "disable-tls": true,
    "secure-http": false
  }
}
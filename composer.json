{
  "name": "peopleandpixel/basic-crm",
  "description": "A basic CRM to manage a small business.",
  "type": "project",
  "license": "GPL-3.0-or-later",
  "require": {
    "php": ">=8.4",
    "ext-pdo": "*",
    "vlucas/phpdotenv": "^5.6",
    "monolog/monolog": "^3.6",
    "ext-intl": "*",
    "twig/twig": "^3.10",
    "ext-fileinfo": "*"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.11",
    "friendsofphp/php-cs-fixer": "^3.64",
    "rector/rector": "^1.2"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "start": "php -S localhost:8080 -t public",
    "serve": "php -S localhost:8080 -t public",
    "setup": "cp -n .env.example .env || true && composer install && php bin/seed-dev.php",
    "seed": "php bin/seed-dev.php",
    "reset": "php bin/reset-dev.php",
    "stan": "vendor/bin/phpstan analyse -c phpstan.neon.dist --memory-limit=1G",
    "stan-baseline": "vendor/bin/phpstan analyse -c phpstan.neon.dist --generate-baseline",
    "cs-check": "vendor/bin/php-cs-fixer fix --dry-run --diff -v",
    "lint": "composer cs-check",
    "cs-fix": "vendor/bin/php-cs-fixer fix -v",
    "fix": "composer cs-fix",
    "rector": "vendor/bin/rector process --dry-run",
    "rector-baseline": "vendor/bin/rector process --generate-baseline"
  },
  "config": {
    "disable-tls": true,
    "secure-http": false
  }
}